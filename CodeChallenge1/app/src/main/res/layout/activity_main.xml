<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/arm_text"
        android:layout_width="@dimen/screen_wide"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/arm_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/arm_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="check  for Armstrong number"
        />


    <EditText
        android:id="@+id/palin_txt"
        android:layout_width="@dimen/screen_wide"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/arm_bttn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/palin_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/palin_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Check for Palindrome"/>

    <EditText
        android:id="@+id/fizz_txt"
        android:layout_width="@dimen/screen_wide"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/palin_bttn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/buzz_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fizz_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Fizz Buzz num"/>


    <TextView
        android:id="@+id/array_txt"
        android:layout_width="@dimen/screen_wide"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/buzz_bttn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Array is {2,3,4,5,5,6,7}. Press to see most common int"/>

    <Button
        android:id="@+id/sort_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/array_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Get Int"
        android:textAlignment="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>